<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.org.fleni.viewermedicalrecords">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ViewerMedicalRecords">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ar.org.fleni.viewermedicalrecords.activity.LoginActivity" android:theme="@style/Theme.ViewerMedicalRecords" />
        <activity android:name="ar.org.fleni.viewermedicalrecords.activity.ConfigActivity" android:theme="@style/Theme.ViewerMedicalRecords" />

    </application>

</manifest>
